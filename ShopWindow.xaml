<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="av" 
        x:Class="RYLWebshopApp.ShopWindow"
        Title="RYL Point - Shop" Height="680" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="Primary" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryDark" Color="#1E40AF"/>
        <SolidColorBrush x:Key="TextMain" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextSubtle" Color="#6B7280"/>
        <SolidColorBrush x:Key="Stroke" Color="#E5E7EB"/>

        <!-- Button Style -->
        <Style x:Key="FluentButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource Primary}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Border x:Name="bg" CornerRadius="10" Background="{TemplateBinding Background}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="12" ShadowDepth="1" Opacity="0.15"/>
                                </Border.Effect>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{StaticResource PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter TargetName="bg" Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="1" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Style="{StaticResource Card}" Padding="18" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="RYL Point" FontSize="12" FontWeight="Bold" Foreground="{StaticResource TextMain}" Margin="0,0,10,0"/>
                    <TextBlock Text="•" Foreground="{StaticResource TextSubtle}" Margin="0,0,10,0"/>
                    <TextBlock Text="Shop" Foreground="{StaticResource TextSubtle}" />
                </StackPanel>

                <!-- Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- NEW BUTTONS -->
                    <Button x:Name="btnPoint" Content="Point" Width="100" Height="30" Margin="0,0,10,0"
                            Style="{StaticResource FluentButton}" Click="btnPoint_Click"/>
                    <Button x:Name="btnCash" Content="Cash" Width="100" Height="30" Margin="0,0,10,0"
                            Style="{StaticResource FluentButton}" Click="btnCash_Click"/>
                    <!-- ADD THIS NEW BUTTON -->
                    <Button x:Name="btnBattlePass" Content="Battle Pass" Width="120" Height="30" Margin="0,0,10,0"
        Style="{StaticResource FluentButton}" Click="btnBattlePass_Click"/>
                    <!--<Button x:Name="btnBattlePass" Content="Battle Pass"
        Width="120" Height="30" Margin="0,0,10,0"
        Style="{StaticResource FluentButton}" Click="btnBattlePass_Click"/> -->
                    <ComboBox x:Name="comboChars" Width="220" Height="38" Padding="8" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtSearch" Width="240" Height="38" Padding="10"
                             BorderBrush="{StaticResource Stroke}" BorderThickness="1"
                             Background="#FAFAFA" Text="Search item..."
                             GotFocus="txtSearch_GotFocus" LostFocus="txtSearch_LostFocus"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT AREA -->
        <Grid Grid.Row="1" Margin="0,16,0,16">
            <!-- PAGE POINT -->
            <Grid x:Name="pagePoint">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Items -->
                <Border Style="{StaticResource Card}" Padding="10" Margin="0,0,16,0">
                    <DockPanel LastChildFill="True">
                        <TextBlock DockPanel.Dock="Top" Text="Available Items (Point)" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextMain}" Margin="6,2,6,8"/>

                        <!-- List + Pagination -->
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button x:Name="btnPrevPage" Content="◀ Prev" Style="{StaticResource FluentButton}" Width="80" Margin="5" Click="btnPrevPage_Click"/>
                            <TextBlock x:Name="lblPageInfo" Text="Page 1/1" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource TextMain}" Margin="10,0"/>
                            <Button x:Name="btnNextPage" Content="Next ▶" Style="{StaticResource FluentButton}" Width="80" Margin="5" Click="btnNextPage_Click" Height="29"/>
                        </StackPanel>

                        <!-- ITEM GRID -->
                        <ListBox x:Name="listItems" BorderThickness="0" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                 ScrollViewer.CanContentScroll="False"
                                 SelectionMode="Single" av:ItemsSource="{av:SampleData ItemCount=5}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3" Rows="2"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource Card}" Width="180" Height="220" Margin="6">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-10,0,0">
                                            <Image Source="{Binding Icon}" Width="80" Height="80" Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding ItemName}" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextMain}" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Point, StringFormat=Price: \{0\} pts}" Foreground="{StaticResource TextSubtle}" FontSize="12" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>

                <!-- Summary / Actions -->
                <Border Grid.Column="1" Style="{StaticResource Card}" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Summary (Point)" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextMain}" />
                        <Separator Margin="0,10,0,10" Background="{StaticResource Stroke}"/>

                        <StackPanel Margin="0,4,0,0">
                            <TextBlock Text="Selected Character" FontSize="12" Foreground="{StaticResource TextSubtle}"/>
                            <TextBlock Text="{Binding Text, ElementName=comboChars, FallbackValue=—}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextMain}" Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Selected Item" FontSize="12" Foreground="{StaticResource TextSubtle}"/>
                            <TextBlock Text="{Binding SelectedItem.ItemName, ElementName=listItems, FallbackValue=—}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextMain}" Margin="0,2,0,0" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Amount" FontSize="12" Foreground="{StaticResource TextSubtle}"/>
                            <TextBox x:Name="txtAmount" Text="1" Width="272" Height="28" Padding="4" BorderBrush="{x:Null}" BorderThickness="1" Margin="0,2,0,0" Background="{x:Null}" IsReadOnly="True" IsEnabled="False" Foreground="{DynamicResource TextMain}" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Your Point" FontSize="12" Foreground="{StaticResource TextSubtle}"/>
                            <TextBlock x:Name="lblUserPoint" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextMain}" Margin="0,2,0,0"/>
                        </StackPanel>

                        <Button x:Name="btnBuyItem" Content="Buy Item" Height="40" Margin="0,18,0,0" Style="{StaticResource FluentButton}" Click="btnBuyItem_Click"/>

                        <Border Background="#F9FAFB" CornerRadius="10" Padding="10" Margin="0,16,0,0" BorderBrush="{StaticResource Stroke}" BorderThickness="1">
                            <TextBlock x:Name="lblStatusShop" Text="" TextWrapping="Wrap" Foreground="{StaticResource TextSubtle}"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- PAGE CASH -->
            <Grid x:Name="pageCash" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
<!-- PAGE BATTLEPASS -->
<Grid x:Name="pageBattlePass" Visibility="Collapsed">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- Rewards List -->
    <Border Style="{StaticResource Card}" Padding="10" Margin="0,0,16,0">
        <DockPanel LastChildFill="True">
            <TextBlock DockPanel.Dock="Top" Text="Battle Pass Rewards" 
                       FontSize="16" FontWeight="SemiBold" 
                       Foreground="{StaticResource TextMain}" Margin="6,2,6,8"/>

            <!-- ITEM GRID -->
            <ListBox x:Name="listBattlePass" BorderThickness="0" 
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     SelectionMode="Single">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource Card}" Width="180" Height="220" Margin="6">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Image Source="{Binding Icon}" Width="80" Height="80" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding ItemName}" FontWeight="SemiBold" 
                                           FontSize="14" Foreground="{StaticResource TextMain}" 
                                           HorizontalAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding Day, StringFormat=Day {0}}" 
                                           Foreground="{StaticResource TextSubtle}" FontSize="12" HorizontalAlignment="Center"/>
                                <Button Content="Claim" Width="100" Height="30" Margin="0,8,0,0"
                                        Style="{StaticResource FluentButton}" 
                                        Command="{Binding ClaimCommand}" 
                                        IsEnabled="{Binding IsClaimable}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
    </Border>

    <!-- Summary / Status -->
    <Border Grid.Column="1" Style="{StaticResource Card}" Padding="16">
        <StackPanel>
            <TextBlock Text="Battle Pass Status" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextMain}" />
            <Separator Margin="0,10,0,10" Background="{StaticResource Stroke}"/>
            <TextBlock x:Name="lblBattlePassStatus" Text="Loading rewards..." 
                       Foreground="{StaticResource TextSubtle}" TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</Grid>
                <!-- Items -->
                <Border Style="{StaticResource Card}" Padding="10" Margin="0,0,16,0">
                    <DockPanel LastChildFill="True">
                        <TextBlock DockPanel.Dock="Top" Text="Available Items (Cash)" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextMain}" Margin="6,2,6,8"/>

                        <!-- List + Pagination -->
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button x:Name="btnPrevPageCash" Content="◀ Prev" Style="{StaticResource FluentButton}" Width="80" Margin="5" Click="btnPrevPageCash_Click"/>
                            <TextBlock x:Name="lblPageInfoCash" Text="Page 1/1" VerticalAlignment="Center" FontWeight="Bold" Foreground="{StaticResource TextMain}" Margin="10,0"/>
                            <Button x:Name="btnNextPageCash" Content="Next ▶" Style="{StaticResource FluentButton}" Width="80" Margin="5" Height="29"
                                    Click="btnNextPageCash_Click"/>
                        </StackPanel>

                        <!-- ITEM GRID -->
                        <ListBox x:Name="listItemsCash" BorderThickness="0" 
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                 ScrollViewer.CanContentScroll="False"
                                 SelectionMode="Single" av:ItemsSource="{av:SampleData ItemCount=5}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="3" Rows="2"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource Card}" Width="180" Height="220" Margin="6">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-10,0,0">
                                            <Image Source="{Binding Icon}" Width="80" Height="80" Margin="0,0,0,10"/>
                                            <TextBlock Text="{Binding ItemName}" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextMain}" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Cash, StringFormat=Price: \{0\} cash}" Foreground="{StaticResource TextSubtle}" FontSize="12" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>

                <!-- Summary / Actions -->
                <Border Grid.Column="1" Style="{StaticResource Card}" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Summary (Cash)" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextMain}" />
                        <Separator Margin="0,10,0,10" Background="{StaticResource Stroke}"/>

                        <StackPanel Margin="0,4,0,0">
                            <TextBlock Text="Selected Character" FontSize="12" Foreground="{StaticResource TextSubtle}"/>
                            <TextBlock Text="{Binding Text, ElementName=comboChars, FallbackValue=—}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextMain}" Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Selected Item" FontSize="12" Foreground="{StaticResource TextSubtle}"/>
                            <TextBlock Text="{Binding SelectedItem.ItemName, ElementName=listItemsCash, FallbackValue=—}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextMain}" Margin="0,2,0,0" TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Amount" FontSize="12" Foreground="{StaticResource TextSubtle}"/>
                            <TextBox x:Name="txtAmountCash" Text="1" Width="272" Height="28" Padding="4" BorderBrush="{x:Null}" BorderThickness="1" Margin="0,2,0,0" Background="{x:Null}" IsReadOnly="True" IsEnabled="False" Foreground="{DynamicResource TextMain}" FontSize="14" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Your Cash" FontSize="12" Foreground="{StaticResource TextSubtle}"/>
                            <TextBlock x:Name="lblUserCash" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextMain}" Margin="0,2,0,0"/>
                        </StackPanel>

                        <Button x:Name="btnBuyItemCash" Content="Buy Item" Height="40" Margin="0,18,0,0" Style="{StaticResource FluentButton}"
                                Click="btnBuyItemCash_Click"/>

                        <Border Background="#F9FAFB" CornerRadius="10" Padding="10" Margin="0,16,0,0" BorderBrush="{StaticResource Stroke}" BorderThickness="1">
                            <TextBlock x:Name="lblStatusShopCash" Text="" TextWrapping="Wrap" Foreground="{StaticResource TextSubtle}"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- FOOTER -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="© RYL VOLTAGE" Foreground="{StaticResource TextSubtle}" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>
