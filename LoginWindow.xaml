<Window x:Class="RYLWebshopApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RYL Webshop - Login"
        Height="380" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        MouseDown="Window_MouseDown">

    <Grid>
        <!-- Background Image -->
       <!-- <Image Source="Assets/background.jpg" Stretch="UniformToFill"/> -->

        <!-- Floating glowing panel with close button -->
        <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="300" Padding="10" Background="#2c2c2c" CornerRadius="15">
            <Border.Effect>
                <DropShadowEffect Color="#dddddd" BlurRadius="15" ShadowDepth="0"/>
            </Border.Effect>

            <Grid>
                <!-- Close Button -->
                <Button Content="✕" Width="25" Height="25" 
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="#FF922121" Foreground="#f5f5f5"
                        FontWeight="Bold" FontSize="14"
                        BorderBrush="#dddddd" BorderThickness="1"
                        Cursor="Hand"
                        Click="btnClose_Click"/>

                <StackPanel Margin="0,30,0,0">
                    <!-- space for close button -->
                    <!-- Title -->
                    <TextBlock Text="Voltage Shop" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#f5f5f5" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>

                    <!-- Username -->
                    <Grid Margin="0,0,0,12">
                        <TextBox x:Name="txtAccount" Height="40" Padding="10"
                                 Background="#2c3e50" Foreground="#f5f5f5"
                                 BorderBrush="#dddddd" BorderThickness="1" 
                                 FontWeight="SemiBold"
                                 TextChanged="txtAccount_TextChanged"/>
                        <TextBlock Text="Enter Account" Foreground="#cccccc" 
                                   Margin="12,0,0,0" VerticalAlignment="Center" 
                                   IsHitTestVisible="False"
                                   x:Name="txtAccountWatermark"/>
                    </Grid>

                    <!-- Password -->
                    <Grid Margin="0,0,0,12">
                        <PasswordBox x:Name="txtPassword" Height="40" Padding="10"
                                     Background="#2c3e50" Foreground="#f5f5f5"
                                     BorderBrush="#dddddd" BorderThickness="1" 
                                     FontWeight="SemiBold"
                                     PasswordChanged="txtPassword_PasswordChanged"/>
                        <TextBlock Text="Enter Password" Foreground="#cccccc" 
                                   Margin="12,0,0,0" VerticalAlignment="Center" 
                                   IsHitTestVisible="False"
                                   x:Name="txtPasswordWatermark"/>
                    </Grid>

                    <!-- Login Button -->
                    <Button x:Name="btnLogin" Content="Login" Height="45" 
                            Background="#2c2c2c" Foreground="#f5f5f5" 
                            FontWeight="Bold" FontSize="16" 
                            Cursor="Hand"
                            Click="btnLogin_Click"
                            Margin="0,0,0,12">
                        <Button.Effect>
                            <DropShadowEffect Color="#dddddd" BlurRadius="12" ShadowDepth="0"/>
                        </Button.Effect>
                    </Button>

                    <!-- Status Label -->
                    <TextBlock x:Name="lblStatus" Foreground="Red" FontSize="14" 
                               TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
