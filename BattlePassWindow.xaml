<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="av" 
        x:Class="RYLWebshopApp.BattlePassWindow"
        Title="RYL Point - Battle Pass" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="Primary" Color="#2563EB"/>
        <SolidColorBrush x:Key="PrimaryDark" Color="#1E40AF"/>
        <SolidColorBrush x:Key="Success" Color="#10B981"/>
        <SolidColorBrush x:Key="Warning" Color="#F59E0B"/>
        <SolidColorBrush x:Key="TextMain" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextSubtle" Color="#6B7280"/>
        <SolidColorBrush x:Key="Stroke" Color="#E5E7EB"/>

        <!-- Button Style -->
        <Style x:Key="FluentButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource Primary}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Border x:Name="bg" CornerRadius="10" Background="{TemplateBinding Background}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="12" ShadowDepth="1" Opacity="0.15"/>
                                </Border.Effect>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="{StaticResource PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter TargetName="bg" Property="Background" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="1" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Reward Card Style -->
        <Style x:Key="RewardCard" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="180"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="1" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Style="{StaticResource Card}" Padding="20" Grid.Row="0">
            <StackPanel>
                <TextBlock Text="Battle Pass - Season 1" FontSize="24" FontWeight="Bold" 
                          Foreground="{StaticResource TextMain}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">

                    <TextBlock x:Name="lblSeasonInfo" Text="Day 1 of 30" FontSize="14" 
                               Foreground="{StaticResource TextSubtle}" Margin="0,0,20,0"/>
                    <TextBlock x:Name="lblSeasonEnd" Text="Ends: Loading..." FontSize="14" 
                               Foreground="{StaticResource TextSubtle}"/>
                </StackPanel>
                <Button x:Name="btnBuyBattlePass" Content="Buy Battle Pass" Style="{StaticResource FluentButton}" 
        Width="200" Margin="5" Click="btnBuyBattlePass_Click"/>
                <TextBlock x:Name="lblCharInfo" Text="Character: Loading..." FontSize="14" FontWeight="Bold"
                           Foreground="{StaticResource Primary}" HorizontalAlignment="Left" Margin="5,0,0,10"/>
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Season Progress" FontSize="12" Foreground="{StaticResource TextSubtle}" 
                               HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <Border Background="#E5E7EB" Height="8" CornerRadius="4" Width="300" HorizontalAlignment="Center">
                        <Border x:Name="progressBar" Background="{StaticResource Primary}" Height="8" 
                               CornerRadius="4" HorizontalAlignment="Left" Width="30"/>
                    </Border>
                    
                    <TextBlock x:Name="lblProgress" Text="3%" FontSize="11" Foreground="{StaticResource TextSubtle}" 
                               HorizontalAlignment="Center" Margin="0,3,0,0"/>
                </StackPanel>
                
                <Border x:Name="statusBorder" Background="#F0FDF4" CornerRadius="8" Padding="12" 
                        Margin="0,10,0,0" Visibility="Collapsed" BorderBrush="#BBF7D0" BorderThickness="1">
                    <TextBlock x:Name="lblStatus" Text="" FontSize="12" Foreground="#166534" 
                               TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- NAVIGATION -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,15">
            <Button x:Name="btnPrevWeek" Content="◀ Previous Week" Style="{StaticResource FluentButton}" 
                   Width="120" Margin="5" Click="btnPrevWeek_Click"/>
            <TextBlock x:Name="lblWeekInfo" Text="Week 1" VerticalAlignment="Center" FontWeight="Bold" 
                       Foreground="{StaticResource TextMain}" Margin="15,0"/>
            <Button x:Name="btnNextWeek" Content="Next Week ▶" Style="{StaticResource FluentButton}" 
                   Width="120" Margin="5" Click="btnNextWeek_Click"/>
        </StackPanel>

        <!-- REWARDS GRID -->
        <Border Style="{StaticResource Card}" Padding="15" Grid.Row="2">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Daily Rewards" FontSize="18" FontWeight="SemiBold" 
                          Foreground="{StaticResource TextMain}" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="rewardsContainer">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="7" Rows="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource RewardCard}">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DayText}" FontSize="10" FontWeight="Bold"
                                                   Foreground="{StaticResource TextSubtle}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <Image Source="{Binding IconImage}" Width="48" Height="48" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding ItemName}" FontSize="11" FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextMain}" HorizontalAlignment="Center" 
                                                   TextWrapping="Wrap" Margin="0,0,0,5" Height="25" TextAlignment="Center"/>
                                        <TextBlock Text="{Binding ValueText}" FontSize="10" 
                                                   Foreground="{StaticResource Warning}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <!-- Updated Claim Button -->
                                        <Button Content="{Binding ButtonText}" Click="ClaimReward_Click" Tag="{Binding Day}" Width="80" Height="28" FontSize="11" FontWeight="SemiBold" Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="{StaticResource Success}"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsClaimed}" Value="True">
                                                            <Setter Property="Background" Value="#6B7280"/>
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsLocked}" Value="True">
                                                            <Setter Property="Background" Value="#9CA3AF"/>
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- FOOTER STATS -->
        <Border Style="{StaticResource Card}" Padding="20" Grid.Row="3" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Claimed Rewards" FontSize="12" Foreground="{StaticResource TextSubtle}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblClaimedCount" Text="0" FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource Success}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Available Today" FontSize="12" Foreground="{StaticResource TextSubtle}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblAvailableToday" Text="1" FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource Primary}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Login Streak" FontSize="12" Foreground="{StaticResource TextSubtle}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblStreak" Text="1" FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource Warning}" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="Season Progress" FontSize="12" Foreground="{StaticResource TextSubtle}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="lblSeasonProgress" Text="3%" FontSize="24" FontWeight="Bold" 
                               Foreground="{StaticResource TextMain}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
